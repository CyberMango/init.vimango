{
    "suggest.minTriggerInputLength": 2,
    "suggest.snippetIndicator": "â–º",
    "suggest.maxCompleteItemCount": 8,
    "suggest.labelMaxLength": 40,

    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.source.ultisnips.priority": 9999,

    "list.source.files.excludePatterns": ["**/.git/**", "**/.ccls-cache/**"],

    "diagnostic.warningSign": "!",

    "python.setInterpreter": "python3",
    "python.linting.enabled": true,
    "python.jediEnabled": false,
    "python.analysis.openFilesOnly": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    "python.formatting.provider": "yapf",

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp"],
            "rootPatterns": [".git/", ".ccls-root", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                }
            }
        }
    }
}

